<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.044"
        android:background="@color/yellow">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/logo_maroon"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/approaching_vehicles"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:textColor="@color/maroon"
            tools:ignore="RelativeOverlap" />


        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginEnd="15dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_alignParentEnd="true"
            app:lottie_fileName="vehicles.json" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables"
        android:gravity="center">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/line" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="15dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="320dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/frame2"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/frame2"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/frame2"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame2"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/todo"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame2"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/todo"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame2"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/todo"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame2"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/todo"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame2"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/todo"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame2"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/todo"/>

            </LinearLayout>
        </ScrollView>



        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/frame3"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/home_icon"
            android:background="@drawable/ripple_effect" />

        <ImageView
            android:id="@+id/loc_icon"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/loc_icon"
            android:background="@drawable/ripple_effect" />

        <ImageView
            android:id="@+id/emergency_icon"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/emergency_icon"
            android:background="@drawable/ripple_effect"/>

        <ImageView
            android:id="@+id/history_icon"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/history_icon"
            android:background="@drawable/ripple_effect"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/redcar"
            android:background="@drawable/ripple_effect"/>

        <ImageView
            android:id="@+id/prof_icon"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:src="@drawable/prof"
            android:background="@drawable/ripple_effect"/>
    </LinearLayout>
    </LinearLayout>