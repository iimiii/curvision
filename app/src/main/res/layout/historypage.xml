<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="35sp"
        android:layout_marginStart="40dp"
        android:text="@string/top_news"
        android:textColor="@color/maroon"
        android:fontFamily="sans-serif-black"/>

    <ImageView
        android:id="@+id/logohome"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/cv_logo"
        android:layout_marginTop="15dp"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/logo"/>

</LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginBottom="50dp"
        android:padding="20dp"
        android:layout_marginTop="90dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

        <ImageView
            android:id="@+id/history1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/n1"
            android:background="@drawable/ripple1"
            android:padding="1dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/history2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/n2"
            android:background="@drawable/ripple1"
            android:padding="1dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/todo"/>

            <ImageView
                android:id="@+id/history3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/n3"
                android:background="@drawable/ripple1"
                android:padding="1dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/todo"/>

            <ImageView
                android:id="@+id/history4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/n4"
                android:background="@drawable/ripple1"
                android:padding="1dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/todo"/>

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="number.json" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data1"
            android:layout_gravity="center"
            android:layout_marginTop="-40dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data2"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/source"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/frame3"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/home_icon"
            android:background="@drawable/ripple_effect" />

        <ImageView
            android:id="@+id/loc_icon"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/loc_icon"
            android:background="@drawable/ripple_effect" />

        <ImageView
            android:id="@+id/emergency_icon"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/emergency_icon"
            android:background="@drawable/ripple_effect"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/redhistory"
            android:background="@drawable/ripple_effect"/>

        <ImageView
            android:id="@+id/car_icon"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/car_icon"
            android:background="@drawable/ripple_effect"/>

        <ImageView
            android:id="@+id/prof_icon"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:src="@drawable/prof"
            android:background="@drawable/ripple_effect"/>
    </LinearLayout>
</RelativeLayout>